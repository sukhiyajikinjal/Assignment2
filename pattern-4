var n=5,a :Int
let i,j,k :Int
a=n
for i in 1...n
{
  for _ in 1...a
  {
    print(" ",terminator:" ")
  }
  for _ in 1...2*i-1
  {
    print("*",terminator:" ")
  }
  a=a-1
  print("\n")
}
a=2
for i in 1...n-1
{
  for _ in 1...a
  {
    print(" ",terminator:" ")
  }
  for _ in 1...2*(n-i)-1
  {
    print("*",terminator:" ")
  }
  a=a+1
  print("\n")
}
